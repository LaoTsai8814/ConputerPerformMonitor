<UserControl x:Class="ConputerPerformMonitor.Views.UserControls.DashBoardCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConputerPerformMonitor.Views.UserControls"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             Name="dashboardcard"
             mc:Ignorable="d" 
             >
    <Border CornerRadius="25">
        <Border.Style>
            <Style TargetType="Border" BasedOn="{StaticResource DashBoardCard}">
                <Setter Property="BorderThickness" Value="1.5"></Setter>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#7166f9"></Setter>
                    </Trigger>
                    
                </Style.Triggers>
                
            </Style>
        </Border.Style>
        <Border.InputBindings>
            <MouseBinding Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          MouseAction="LeftClick"/>
        </Border.InputBindings>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding ElementName=dashboardcard,Path=HardwareType}" FontSize="40" VerticalAlignment="Center" Margin="40" Foreground="#edeeee"></TextBlock>
                <local:CircleDashBoard ></local:CircleDashBoard>
            
        </StackPanel>
        
        
               
    </Border>
    
</UserControl>
