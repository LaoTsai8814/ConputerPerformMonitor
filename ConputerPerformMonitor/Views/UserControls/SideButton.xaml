<UserControl x:Class="ConputerPerformMonitor.Views.UserControls.SideButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConputerPerformMonitor.Views.UserControls"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             Name="MenuSideButton"
             >
    <!---->
    <Button Style="{StaticResource Pagesidebutton}" Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding CommandParameter,RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Icon:PackIconMaterial Kind="{Binding ElementName=MenuSideButton, Path=Icon}" Style="{StaticResource PagesidebuttonIcon}"/>
    </Button>
</UserControl>
